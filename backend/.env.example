# Backend Environment Variables Example

# MongoDB connection string (local or Atlas)
MONGO_URI=mongodb://localhost:27017/academy_db

# JWT secret used for signing authentication tokens
JWT_SECRET=replace-with-a-secure-random-string

# Frontend URL allowed by CORS
FRONTEND_URL=http://localhost:5173

# Port for the backend server
PORT=5000

# Firebase Admin SDK Service Account (as JSON string)
FIREBASE_SERVICE_ACCOUNT={
  "type": "service_account",
  "project_id": "your-project-id",
  "private_key_id": "your-private-key-id",
  "private_key": "-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n",
  "client_email": "firebase-adminsdk-...@your-project-id.iam.gserviceaccount.com",
  "client_id": "your-client-id",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token",
  "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
  "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/..."
}

# Session secret
SESSION_SECRET=your-session-secret

# Email configuration for OTP
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
# Note: For Gmail, you need to generate an App Password if using 2FA
# Go to: Google Account > Security > App Passwords

# OTP configuration
OTP_EXPIRY_MINUTES=10
MAX_OTP_ATTEMPTS=3

# Logging level (optional)
LOG_LEVEL=dev
